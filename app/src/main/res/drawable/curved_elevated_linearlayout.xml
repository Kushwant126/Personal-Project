<?xml version="1.0" encoding="utf-8"?>
<!-- curved_elevated_linearlayout.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background with curved corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="24dp" android:topRightRadius="24dp"/>
            <solid android:color="#FFFFFF"/> <!-- Background color of the linear layout -->
        </shape>
    </item>

    <!-- Elevation shadow -->
    <item android:right="0dp" android:left="0dp" android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="24dp" android:topRightRadius="24dp"/>
            <solid android:color="@color/white"/> <!-- Elevation color -->
        </shape>
    </item>

</layer-list>
