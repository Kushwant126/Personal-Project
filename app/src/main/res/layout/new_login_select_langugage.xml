<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_cardview"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvlanguage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size20"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_20"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/select_language"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_25"
        android:layout_marginBottom="@dimen/margin_3"
        android:background="@color/white"
        app:cardBackgroundColor="#C4C4C4"
        app:cardCornerRadius="@dimen/margin_20"
        app:cardElevation="@dimen/size7">

        <LinearLayout
            android:id="@+id/llyEnglish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/size12">

            <TextView
                android:id="@+id/tEnglish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_marginHorizontal="@dimen/margin_25"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/english_"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp" />

            <ImageView
                android:layout_width="@dimen/size30"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/margin_5"
                android:layout_marginRight="@dimen/size30"
                android:background="@color/black"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_30"
        android:background="@color/white"
        app:cardBackgroundColor="#857E7E"
        app:cardCornerRadius="@dimen/margin_20"
        app:cardElevation="@dimen/size7">

        <LinearLayout
            android:id="@+id/llyArabic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/size12">

            <TextView
                android:id="@+id/tArabic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_marginHorizontal="@dimen/margin_25"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/arabic"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp" />

            <ImageView
                android:layout_width="@dimen/size30"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/margin_5"
                android:layout_marginRight="@dimen/size30"
                android:background="@color/black"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_app_color"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:paddingVertical="@dimen/margin_15"
        android:text="@string/Submitcaps"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12sp" />
</LinearLayout>