<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="@dimen/size240"
        android:layout_height="@dimen/size200"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size0"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/new_app_logo"
        android:visibility="gone" />

    <ImageView
        android:layout_width="@dimen/size240"
        android:layout_height="@dimen/size200"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size0"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/images_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0"
        android:layout_weight=".2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_2"
                android:background="#00A651" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size20"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="Sales Force"
                android:textColor="@color/new_app_color"
                android:textSize="@dimen/size22" />

            <View
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_2"
                android:background="#00A651" />

        </LinearLayout>

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center"
            android:text="Automation"
            android:textColor="@color/black"
            android:textSize="@dimen/size50" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_20"
                android:background="@color/new_app_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="PRE SALES"
                android:textColor="@color/new_app_color"

                android:textSize="@dimen/size30"
                android:visibility="gone" />

            <View
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_2"
                android:layout_marginLeft="@dimen/margin_20"
                android:background="#00A651" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0"
        android:layout_weight="1"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dip"
        android:layout_height="@dimen/size0"
        android:layout_gravity="center"
        android:layout_marginBottom="5dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Powered by"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/size14" />

        <ImageView
            android:layout_width="@dimen/margin_100"
            android:layout_height="@dimen/size35"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@drawable/images_2"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/margin_100"
            android:layout_height="@dimen/size35"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@drawable/images_2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0"
        android:layout_weight=".7" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0"
        android:layout_weight="2.5"
        android:background="@drawable/splash_screen_bottom" />

</LinearLayout>