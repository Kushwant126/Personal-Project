<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/llPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="@dimen/size80"
            android:layout_height="@dimen/size80"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivOutsideImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/progress_img" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/size20"
                android:src="@drawable/progress_mid_icon"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/size20"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:src="@drawable/images_1" />
            </androidx.cardview.widget.CardView>


            <FrameLayout
                android:id="@+id/container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone">

                <include
                    android:id="@+id/notelist"
                    layout="@layout/first_view" />
            </FrameLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvLoading"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size3"
            android:gravity="center"
            android:singleLine="true"
            android:text="Still loading data..."
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>
</LinearLayout>