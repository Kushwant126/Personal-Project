<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".95"
        android:background="@drawable/bg_leaderboard"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size7"
        android:paddingTop="@dimen/size15"
        android:paddingRight="@dimen/size7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/size5"
                android:text="@string/leaderboard"
                android:textColor="@color/white"
                android:textSize="@dimen/size20"
                 />

            <TextView
                android:id="@+id/userCategory"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size20"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/size5"
                android:layout_weight="1"
                android:background="@drawable/leaderboard_category_bg"
                android:drawableRight="@drawable/dashicons_arrowdownalt2"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:hint="Visit"
                android:paddingLeft="@dimen/size5"
                android:paddingRight="@dimen/size5"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="13sp"

                android:visibility="gone" />

            <TextView
                android:id="@+id/userSubCategory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:background="@drawable/leaderboard_category_bg"
                android:clickable="false"
                android:drawableRight="@drawable/dashicons_arrowdownalt2"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:hint="Overall"
                android:paddingHorizontal="@dimen/size5"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="13sp"

                android:visibility="gone" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size15"
            app:cardCornerRadius="@dimen/size5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size35"
                android:layout_gravity="center"
                android:background="@drawable/leaderboardtab_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/size1">


                <TextView
                    android:id="@+id/tvBranchTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_textview_bg"
                    android:clickable="false"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="Branch"
                    android:textColor="@color/new_app_color"
                    android:textSize="14sp"

                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tvCountryTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_textview_bg"
                    android:clickable="false"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="@string/Country"
                    android:textColor="@color/new_app_color"
                    android:textSize="@dimen/text_size_12sp"
                     />


                <TextView
                    android:id="@+id/tvRegionTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="@string/region"
                    android:textColor="@color/background_tab_pressed"
                    android:textSize="@dimen/text_size_12sp"
                     />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/size10"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/size5"
            android:paddingRight="@dimen/size5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivSecondRankImage"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/circular_image_bg"
                        android:src="@drawable/no_image"
                        app:civ_border_color="#DADADA"
                        app:civ_border_width="2.5dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:background="@color/orange"
                        android:rotation="45" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="2"

                        android:textColor="@color/black" />
                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/secondrank_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSecondrankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/size10"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center_vertical"
                        android:text="@string/na"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size10"
                         />

                    <TextView
                        android:id="@+id/tvSecondrankId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:text="@string/na"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/tvSecondrankVisit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/size5"
                            android:paddingRight="@dimen/size5"
                            android:text="@string/points"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size10"
                             />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp"
                            android:background="@color/white" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvSecondrankVisitedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center_vertical"
                        android:text="@string/na"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/crown2" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivFirstRankImage"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/circular_image_bg"
                        android:src="@drawable/no_image"
                        app:civ_border_color="#FFAA00"
                        app:civ_border_width="2.5dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rankonediagnol_bg"
                        android:rotation="45" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="1"
                        android:textColor="@color/white" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/firstrank_bg"
                    android:elevation="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFirstrankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/size10"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center_vertical"
                        android:text="@string/na"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size10"
                         />

                    <TextView
                        android:id="@+id/tvFirstrankId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:text="@string/na"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/tvFirstrankVisit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/size5"
                            android:paddingRight="@dimen/size5"
                            android:text="@string/points"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size10"
                             />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp"
                            android:background="@color/white" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvFirstrankVisitedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center_vertical"
                        android:text="@string/na"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivThirdRankImage"

                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/circular_image_bg"
                        android:src="@drawable/no_image"
                        app:civ_border_color="#CB6D15"
                        app:civ_border_width="2.5dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rankthreediagnol_bg"
                        android:rotation="45" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/montserrat_bold"

                        android:text="3"
                        android:textColor="@color/white" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/thirdrank_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvThirdrankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/size10"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center_vertical"
                        android:text="@string/na"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size10"
                         />

                    <TextView
                        android:id="@+id/tvThirdrankId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:text="@string/na"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/tvThirdrankVisit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/size5"
                            android:paddingRight="@dimen/size5"
                            android:text="@string/points"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size10"
                             />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp"
                            android:background="@color/white" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvThirdrankVisitedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center_vertical"
                        android:text="@string/na"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size15"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/size5"
            android:background="@color/new_bg_color"
            app:cardCornerRadius="@dimen/size16"
            app:cardElevation="@dimen/size15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/new_bg_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/your_rank_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/your_rank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_5"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center"
                        android:text="@string/Your_Ranking"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size10"
                         />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/size5"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/userRankid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_10"
                            android:layout_marginLeft="@dimen/size10"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center"
                            android:text="@string/na"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size17" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivUserImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="@dimen/size5"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/circular_image_bg"
                            android:src="@drawable/no_image"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/size10">

                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center_vertical"
                                android:text="@string/na"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_10sp"
                                 />

                            <TextView
                                android:id="@+id/tvUserId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center_vertical"
                                android:text="@string/na"
                                android:textColor="@color/white"
                                android:textSize="@dimen/size8" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/userRank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/size5"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center"
                            android:paddingRight="@dimen/text_size_small_11sp"
                            android:text="@string/na"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size17" />
                    </LinearLayout>

                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvUserList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone"
                            tools:itemCount="15" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>